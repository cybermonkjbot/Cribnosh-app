# Multi-stage build optimized for AWS App Runner
FROM oven/bun:1.2.17-alpine AS deps
WORKDIR /app

# Force consistent registry resolution inside Docker
COPY .npmrc ./

# Only copy manifests first for better layer caching
COPY package.json bun.lock ./

# Single install (includes dev deps for building)
RUN bun install --frozen-lockfile --no-progress

FROM oven/bun:1.2.17-alpine AS builder
WORKDIR /app

# Copy installed modules and lockfile
COPY --from=deps /app/node_modules ./node_modules
COPY --from=deps /app/package.json ./package.json
COPY --from=deps /app/bun.lock ./bun.lock

# Copy the rest of the source
COPY . .

# Set build-time environment variables to prevent API key errors during build
ENV RESEND_API_KEY="re_EQsb5GpW_HkaiK9VCCYjwAYH2Jd8xP5VN"
ENV OPENAI_API_KEY=""
ENV ANTHROPIC_API_KEY=""
ENV STRIPE_SECRET_KEY=""
ENV NEXT_PUBLIC_CONVEX_URL="https://colorful-aardvark-576.convex.cloud"
ENV CONVEX_URL="https://colorful-aardvark-576.convex.cloud"
ENV CONVEX_DEPLOY_KEY=""
ENV JWT_SECRET="cribnosh-dev-secret"
ENV NOTION_TOKEN="ntn_H36001900014bCHIwtL24KM5tmGAW2IzmnZolV3FZoNaKH"
ENV NOTION_DATABASE_ID="2240d6968a31808388bddafaefdec9b3"
ENV BASEHUB_TOKEN="bshb_pk_puctvrqlvn8s55v47kqswt021acbzvcr0k3vwfrm0vg5u1z5w4y5g5eutbnsgcgc"
ENV HUGGINGFACE_API_KEY="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"
ENV MINIO_ACCESS_KEY="ERI3IOzELagPdGzB"
ENV MINIO_SECRET_KEY="I1x1wQw8sVePs3URofF909pnrlMa4I7p"
# Disable custom cursor by default to prevent cursor issues
ENV NEXT_PUBLIC_USE_CUSTOM_POINTER="false"
ENV DISABLE_TRY_IT="true"

# Build the app
RUN bun run build

FROM oven/bun:1.2.17-alpine AS production
WORKDIR /app
ENV NODE_ENV=production

# Reuse artifacts and modules from builder; do NOT reinstall in production
COPY --from=builder /app/package.json ./package.json
COPY --from=builder /app/bun.lock ./bun.lock
COPY --from=builder /app/node_modules ./node_modules

# Next.js outputs (adjust if you have a custom output)
COPY --from=builder /app/.next ./.next
COPY --from=builder /app/public ./public

# Install curl for health checks
RUN apk add --no-cache curl

# Health check for AWS App Runner
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD curl -f http://localhost:3000/api/health || exit 1

EXPOSE 3000
CMD ["bun", "run", "start"]