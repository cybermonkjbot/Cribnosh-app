# CribNosh Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# API TIMEOUT CONFIGURATION
# =============================================================================
# Timeout settings for external API calls (milliseconds)
EXTERNAL_API_TIMEOUT=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# CORE APPLICATION
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_CONVEX_URL=your_convex_url_here
NEXT_PUBLIC_BASE_URL=https://cribnosh.com
JWT_SECRET=your_jwt_secret_here

# =============================================================================
# PAYMENT PROCESSING (STRIPE) - CRITICAL FOR MOCK FIX #1
# =============================================================================
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_... # or sk_live_... for production
STRIPE_PUBLISHABLE_KEY=pk_test_... # or pk_live_... for production
STRIPE_WEBHOOK_SECRET=whsec_... # Get from Stripe Dashboard > Webhooks

# =============================================================================
# LIVE STREAMING (AGORA) - CRITICAL FOR MOCK FIX #2
# =============================================================================
# Get these from your Agora Console: https://console.agora.io/
AGORA_APP_ID=your_agora_app_id_here
AGORA_APP_CERTIFICATE=your_agora_app_certificate_here

# =============================================================================
# APPLE MAPS API - CRITICAL FOR MAPS INTEGRATION
# =============================================================================
# Get your Apple Maps API key from Apple Developer Console
# https://developer.apple.com/maps/
APPLE_MAPS_API_KEY=your_apple_maps_api_key_here

# =============================================================================
# DOCUMENT STORAGE (S3/MINIO) - CRITICAL FOR MOCK FIX #3
# =============================================================================
# Option A: AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=eu-west-2
S3_BUCKET_NAME=cribnosh-documents

# Option B: MinIO (Self-hosted S3-compatible)
MINIO_ENDPOINT=your_minio_endpoint
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET=cribnosh-documents
MINIO_PORT=9000
MINIO_USE_SSL=false

# =============================================================================
# REDIS CACHING
# =============================================================================
# Option A: Redis Cloud or hosted Redis
REDIS_URL=redis://username:password@host:port/database

# Option B: Dragonfly (Redis-compatible)
DRAGONFLY_URL=redis://username:password@host:port/database

# Option C: Local Redis (development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# EMAIL SERVICES
# =============================================================================
# Resend (recommended)
RESEND_API_KEY=your_resend_api_key_here
RESEND_WEBHOOK_SECRET=whsec_... # Get from Resend Dashboard > Webhooks

# SMTP (alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# =============================================================================
# SMS SERVICES (UK-focused)
# =============================================================================
# The SMS Works - UK SMS provider (2.37p + VAT per SMS)
SMS_PROVIDER=the_sms_works
SMS_API_KEY=your_sms_works_api_key_here
SMS_SENDER_ID=CribNosh

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Huly Integration
HULY_API_URL=https://app.huly.io
NEXT_PUBLIC_HULY_URL=https://app.huly.io

# AI Services (for emotions engine)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GEMINI_API_KEY=your_gemini_api_key
HF_TOKEN=your_huggingface_token

# =============================================================================
# APPLICATION FEATURES
# =============================================================================
# Feature toggles
DISABLE_DARK_MODE=false
DISABLE_TRY_IT=false
STAFF_PORTAL_ENABLED=true

# Custom Cursor Configuration
# Set to "true" to enable custom cursor, "false" to use system cursor
# Default: false (system cursor) - prevents cursor visibility issues
NEXT_PUBLIC_USE_CUSTOM_POINTER=false

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=800

# Logging
LOG_LEVEL=info

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Test URLs (for development)
TEST_ONBOARDING_URL=http://localhost:3000/api/staff/onboarding
TEST_MATTERMOST_SETUP_URL=http://localhost:3000/api/staff/mattermost/setup
TEST_MATTERMOST_COMPLETE_URL=http://localhost:3000/api/staff/mattermost/complete

# =============================================================================
# DEPLOYMENT & MONITORING
# =============================================================================
# Cloudflare (if using)
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Slack (for notifications)
SLACK_CHANGELOG_WEBHOOK=your_slack_webhook_url

# Hugging Face (for AI features)
HUGGINGFACE_API_KEY=your_huggingface_api_key

# =============================================================================
# NOTES
# =============================================================================
# 1. For production, use 'live' keys instead of 'test' keys for Stripe
# 2. Ensure all webhook URLs are publicly accessible
# 3. Use strong, unique secrets for JWT_SECRET
# 4. Consider using a secrets manager for production environments
# 5. Never commit actual API keys to version control 